HRMS_BGV_FRONTEND AND FRONTEND ADMIN DOCKERFILE 


# ========== BUILD STAGE ==========
FROM node:20-alpine AS build-stage

WORKDIR /app

# ✅ Define build arguments (Vite needs these AT BUILD TIME)
ARG VITE_API_BASE_URL
ARG VITE_DIGIO_WEB_SDK

# ✅ Export them to the shell environment so Vite can see them
ENV VITE_API_BASE_URL=${VITE_API_BASE_URL}
ENV VITE_DIGIO_WEB_SDK=${VITE_DIGIO_WEB_SDK}

# Install dependencies first (better caching)
COPY package*.json ./
RUN npm ci --prefer-offline --no-audit

# Copy source and build
COPY . .
RUN npm run build

# ========== RUN STAGE ==========
# Stage 2: Production Stage (Nginx)
FROM nginx:1-alpine-slim AS production-stage

# Copy compiled files from build stage
COPY --from=build-stage /app/dist /usr/share/nginx/html

# Copy custom Nginx config (Handles Vue Router history mode)
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
